# top-most EditorConfig file
root = true

# 8 width ftw
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true

[*.{html,svelte,json,sql,js,ts,jsx,tsx,vue}]
indent_size = 4

# yaml is sensitive to tabs so better to use spaces
[*.{yaml,yml,toml}]
indent_size = 4
indent_style = space

# include single files here e.g. configs
[{Makefile,.prettierrc,.prettierignore,*.config.*}]
indent_size = 4
